<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/ivImagenProducto"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cama"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Contenedor de texto -->
        <LinearLayout
            android:id="@+id/llInfoProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/ivImagenProducto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Nombre -->
            <TextView
                android:id="@+id/lblNombreProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del producto"
                android:textColor="@color/morado_oscuro"
                android:textSize="24dp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/lblDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Descripción breve del producto"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <!-- Marca y stock -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/lblMarca"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Marca: XYZ"
                    android:textColor="@color/morado_oscuro"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/lblStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock: 10"
                    android:textColor="@color/rosa"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Precio -->
            <TextView
                android:id="@+id/lblPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$150.00"
                android:textColor="@color/rosa"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />

            <!-- Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="end">

                <!-- Botón Agregar al carrito -->
                <ImageButton
                    android:id="@+id/btnAgregarCarrito"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/style_circulo2"
                    android:src="@drawable/ic_agrgar_carrito"
                    android:tint="@color/white"
                    android:contentDescription="Agregar al carrito" />

                <!-- Botón adicional -->
                <ImageButton
                    android:id="@+id/btnVerRelaidadAumentada"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/style_circulo2"
                    android:src="@drawable/ic_ra"
                    android:tint="@color/white"
                    android:contentDescription="Ver más información" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
